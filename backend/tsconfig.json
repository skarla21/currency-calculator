{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "allowImportingTsExtensions": false,
    "noEmit": false, //change to false in prod
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules", "src/*"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
